<%= form_for @recipe, url: {action: "create"}, html: {class: "form-control"} do |f| %>
  <label for="recipe_name">Name</label>
  <%= f.text_field :name, class: "form-control", placeholder: "Recipe name" %>
  <label for="recipe_instructions">Instructions</label>
  <%= f.text_area :instructions, class: "form-control", placeholder: "Type your recipe instructions here" %>
  <%= f.submit "Save Recipe", class: "btn btn-block btn-default"%>
<% end %>
